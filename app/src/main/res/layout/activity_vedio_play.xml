<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vedio_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="roy.me.thumbnailviewer.VideoPlayActivity">

    <SurfaceView
        android:id="@+id/sv_video"
        android:layout_width="352dp"
        android:layout_height="445dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_PlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/sv_video"
        app:layout_constraintRight_toRightOf="@+id/sv_video"
        app:srcCompat="@mipmap/ic_media_play"/>
</android.support.constraint.ConstraintLayout>
